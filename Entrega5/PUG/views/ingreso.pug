html
    head 
        link(rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        link(rel="shortcut icon" href="https://cdn3.iconfinder.com/data/icons/popular-services-brands/512/node-256.png")
        title Formulario de productos
    body
        div(class="container")
            div(class="row  p-4")
                div(class="col-12 bg-light bg-gradient") 
                    h2 Ingrese un producto
                    form(action="/api/productos" method="post" class="myForm" enctype="application/json")
                        div(class="form-group")
                            label(for="title") Nombre
                            input(type="text" name="title" class="form-control")
                        div(class="form-group")
                            label(for="price") Precio
                            input(type="number" name="price" class="form-control")
                        div(class="form-group")
                            label(for="thumbnail") Ingrese URL de la imagen del producto
                            input(type="text" name="thumbnail" class="form-control")
        div(class="container")
            div(class="row")
                div(class="col-6 justify-content-center" style={display:"flex"})
                    button(type="submit" class="btn btn-secondary") Enviar
                div(class="col-6 justify-content-center" style={display:"flex"})
                    button(class="btn btn-primary" type="button" href="/api/productos") Regresar al formulario